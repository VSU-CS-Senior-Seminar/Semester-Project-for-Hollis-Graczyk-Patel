<style>
.entry{
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    background-color: white;
    
  }
  #comments{
    height: 250px;
    overflow-y: scroll;
  }
</style>
<p id="notice"><%= notice %></p>

<div class="entry text-center">
  <p>
    <strong>Title:</strong>
    <%= @message.title %>
  </p>
  
  <p>
    <strong>Content:</strong>
    <%= @message.content %>
  </p>
  
  <p>
    <strong>Category:</strong>
    <%= @message.category %>
  </p>

  <p>
  	Posted by <%= @message.user.name %> <%= time_ago_in_words(@message.created_at) %>
  ago </p>
</div>

<h3>Comments:</h3>
<div id="comments">
  <%= render @message.comments %>
</div>
<h3>Reply to Message:</h3>
<%= render 'comments/form' %>

<% if @message.user_id == current_user.id %>
<%= link_to 'Edit', edit_message_path(@message), class:"btn btn-secondary btn-sm" %> |
<%= link_to 'Back', home_path, class:"btn btn-secondary btn-sm" %>
<% end %>
<p id="notice"><%= notice %></p>

<h1>Listing Blog Articals</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_articals.each do |blog_artical| %>
      <tr>
        <td><%= blog_artical.title %></td>
        <td><%= blog_artical.author %></td>
        <td><%= blog_artical.text %></td>
        <td><%= link_to 'Show', blog_artical %></td>
        <td><%= link_to 'Edit', edit_blog_artical_path(blog_artical) %></td>
        <td><%= link_to 'Destroy', blog_artical, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


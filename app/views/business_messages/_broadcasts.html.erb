<% broadcasts.reverse.each do |broadcast| %>
  
  <div class="entry text-left">
        
        <h4 class="text-center" ><u><%= broadcast.title %></u></h4>
        <p class="text-center"><%= sanitize(broadcast.content) %></p>
        <p class="text-center">Posted by: <%= (User.find_by(id: broadcast.user_id)).name %></p>
        <% if broadcast.user_id == current_user.id %>
        <p class="text-center">
          <%= link_to 'Edit', edit_business_message_path(broadcast),  class: "btn btn-xs btn-default" %>
        </p>
        <p class="text-center">
          <%= link_to 'Destroy', broadcast, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-default" %>
        </p>
        <% end %>
  </div>
  <br>
<% end %>
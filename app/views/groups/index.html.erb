<p id="notice"><%= notice %></p>

<h1>List of Groups That You Are Currently In</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |member| %>
      <% if member.user_id == current_user.id %>
      <tr>
        <p><td><%= member.title %></td></p>
        <p><td><%= (Group.find_by(title: member.title)).description %></td></p>
        <td><%= link_to 'Show', Group.find_by(title: member.title) %></td>
        <td><%= link_to 'Edit', edit_group_path(Group.find_by(title: member.title)) %></td>
        <td><%= link_to 'Destroy', Group.find_by(title: member.title), method: :delete, data: { confirm: 'Are you sure?' } %></td>
       
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<p>
<%= link_to 'New Group', new_group_path, class:"btn btn-small btn-success" %>
</p>
<p>
<%= link_to 'Add Users To Groups', new_membership_path, class:"btn btn-small btn-success" %>
</p> 